{
  "name": "hcaptcha",
  "license": "GPL-2.0-or-later",
  "scripts": {
    "dev": "webpack --mode development",
    "prod": "webpack --env production --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "npx eslint 'webpack.config.js' 'src/js/**/*.js' 'assets/js/*.js' '.tests/js/**/*.js'",
    "test": "jest",
    "coveralls": "jest --coverage && cat coverage/lcov.info | coveralls"
  },
  "jest": {
    "automock": false,
    "verbose": true,
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://domain.tld/"
    },
    "setupFiles": [
      "<rootDir>/.tests/js/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "\\.[tj]sx?$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": 10
                }
              }
            ]
          ]
        }
      ]
    }
  },
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@inrupt/jest-jsdom-polyfills": "^1.6.0",
    "@wordpress/eslint-plugin": "^14.3.0",
    "babel-loader": "^9.1.2",
    "coveralls": "^3.1.1",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "8.37.0",
    "glob": "^9.3.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "jquery": "^3.6.4",
    "mini-css-extract-plugin": "^2.7.5",
    "terser-webpack-plugin": "^5.3.7",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1",
    "webpack-remove-empty-scripts": "^1.0.1"
  }
}
